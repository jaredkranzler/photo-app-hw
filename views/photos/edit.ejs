<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>
    <header>
      <h1>Edit <%=photo.title%></h1>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/photos">Photos Index</a>
          </li>
        </ul>
      </nav>
    </header>


    <main>

      <h2>Photos Attributes:</h2>

      <form action="/photos/<%=photo._id%>?_method=PUT" method="POST">

        <select name="userId">
          <% for (let i = 0; i < authors.length; i++) { %>
            <option value="<%=users[i]._id%>">
              
              <% if (users[i]._id.toString()=== photoUser._id.toString()){%>
              selected
              <% } %>

              <%= users[i].username%>

            </option>
          <% } %>  

        </select>

        <input type="text" name="title" value="<%=photo.title%>" placeholder="Title"/>
        <br/>

        <input type="url" name="url" value="<%=photo.url%>" placeholder="url"/>
        <br/>


        <textarea name="body" placeholder="Photo Body"><%=photo.body%></textarea><br/>
        <input type="submit" value="Update Photo"/>

      </form>

    </main>


  </body>
</html>


